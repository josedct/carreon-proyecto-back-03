<div class="container p-4">
    <div class="row">
        <div class="col p-4 d-flex justify-content-between ">
            <div class="ms-2 me-auto">
                <div>
                    <small class="text-uppercase">
                        Email: {{email}}
                    </small>
                </div>
                <div>
                    <small class="text-uppercase">
                        {{role}}
                    </small>
                </div>
            </div>
            <div class="">
                <a href="/logout" class="btn btn-primary text-uppercase">Cerrar Sesi√≥n</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center p-4">
            <h1 class="text-uppercase">Lista de peliculas</h1>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each payload}}
        <div class="col">
            <div class="card shadow h-100 text-center">
                {{#if this.thumbnails}} 
                    <img src="{{this.thumbnails.[0]}}" class="card-img-top w-75 rounded mx-auto p-4" alt="...">
                {{else}}
                    <img src="img/image-not-available.jpg" class="card-img-top w-75 rounded mx-auto p-4" alt="">
                {{/if}}
                <div class="card-body">
                    <h5 class="card-title">{{ this.title }}</h5>
                    <small class="card-text text-uppercase">{{this.category}}</small>
                    <p class="card-text">{{this.price}}</p>
                    <small class="card-text text-uppercase">disponibles: {{this.stock}}</small>
                </div>
                <div class="card-footer">
                    <a href="product/{{this._id}}" class="btn btn-primary text-uppercase"> Ver detalles </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row">
        <div class="col text-center p-4 d-flex justify-content-between">
            {{#if this.hasPrevPage}}
                <a href="{{this.prevLink}}" class="btn btn-primary text-uppercase"> Pag. Anterior </a>
            {{/if}}
            {{#if this.hasNextPage}}
                <a href="{{this.nextLink}}" class="btn btn-primary text-uppercase"> Pag. Siguiente </a>
            {{/if}}
        </div>
    </div>
</div>