<div class="container p-4">
    <div class="row">
        <div class="col text-center p-4">
            <h1 class="text-uppercase">Carrito de compra</h1>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each payload.products}}
        <div class="col">
            <div class="card shadow h-100 text-center">
                {{#if this.product.thumbnails}} 
                    <img src="{{this.product.thumbnails.[0]}}" class="card-img-top w-75 rounded mx-auto p-4" alt="...">
                {{else}}
                    <img src="img/image-not-available.jpg" class="card-img-top w-75 rounded mx-auto p-4" alt="">
                {{/if}}
                <div class="card-body">
                    <h5 class="card-title">{{ this.product.title }}</h5>
                    <small class="card-text text-uppercase">{{this.category}}</small>
                    <p class="card-text">{{this.product.price}}</p>
                </div>
                <div class="card-footer">
                   <small class="card-text text-uppercase">{{this.quantity}}</small>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>